<style>
  /* NAV */
  .nav { position: fixed; top: 0; left: 0; right: 0; z-index: 100; background: rgba(255,255,255,0.95); backdrop-filter: blur(10px); border-bottom: 1px solid rgba(0,0,0,0.06); }
  .nav-inner { display: flex; align-items: center; justify-content: space-between; height: 70px; }
  .logo { display: flex; align-items: center; gap: 0.5rem; font-size: 1.1rem; }
  .logo-icon { font-size: 1.4rem; }
  .nav-links { display: flex; align-items: center; gap: 2rem; }
  .nav-links a { font-size: 0.95rem; font-weight: 500; color: var(--text-light); transition: color 0.2s; }
  .nav-links a:hover { color: var(--primary); }
  .btn-sm { padding: 0.5rem 1.25rem; font-size: 0.9rem; }
  .mobile-toggle { display: none; background: none; border: none; font-size: 1.5rem; cursor: pointer; }

  @media (max-width: 768px) {
    .mobile-toggle { display: block; }
    .nav-links { display: none; flex-direction: column; position: absolute; top: 70px; left: 0; right: 0; background: #fff; padding: 1.5rem; box-shadow: 0 4px 20px rgba(0,0,0,0.1); gap: 1rem; }
    .nav-links.open { display: flex; }
  }

  /* HERO */
  .hero { padding: 10rem 0 6rem; background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%); color: #fff; }
  .hero-badge { display: inline-block; padding: 0.4rem 1rem; background: rgba(255,255,255,0.15); border-radius: 100px; font-size: 0.85rem; margin-bottom: 1.5rem; }
  .hero h1 { font-size: 3rem; font-weight: 800; line-height: 1.15; margin-bottom: 1.25rem; }
  .highlight { color: var(--accent); }
  .hero-sub { font-size: 1.15rem; opacity: 0.9; max-width: 550px; margin-bottom: 2rem; line-height: 1.7; }
  .hero-cta { display: flex; gap: 1rem; flex-wrap: wrap; margin-bottom: 2.5rem; }
  .hero-trust { display: flex; gap: 1.5rem; flex-wrap: wrap; font-size: 0.9rem; opacity: 0.85; }

  @media (max-width: 768px) {
    .hero { padding: 8rem 0 4rem; }
    .hero h1 { font-size: 2rem; }
  }

  /* SERVICES */
  .services-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem; }
  .service-card { background: #fff; padding: 2rem; border-radius: var(--radius); border: 1px solid #e8ecf1; transition: all 0.2s; }
  .service-card:hover { border-color: var(--accent); transform: translateY(-2px); box-shadow: 0 8px 30px rgba(0,0,0,0.06); }
  .service-icon { font-size: 2rem; display: block; margin-bottom: 1rem; }
  .service-card h3 { font-size: 1.15rem; font-weight: 700; margin-bottom: 0.5rem; color: var(--primary); }
  .service-card p { font-size: 0.92rem; color: var(--text-light); line-height: 1.6; }

  @media (max-width: 768px) {
    .services-grid { grid-template-columns: 1fr; }
  }

  /* ABOUT */
  .about-grid { display: grid; grid-template-columns: 1fr 1.2fr; gap: 4rem; align-items: center; }
  .about-placeholder { background: var(--bg-alt); border-radius: var(--radius); height: 350px; display: flex; flex-direction: column; align-items: center; justify-content: center; color: var(--text-light); border: 2px dashed #d0d5dd; }
  .about-placeholder span { font-size: 3rem; margin-bottom: 0.5rem; }
  .about-content p { color: var(--text-light); margin-bottom: 1rem; font-size: 1.02rem; }
  .about-stats { display: flex; gap: 2.5rem; margin-top: 2rem; }
  .stat { text-align: center; }
  .stat-number { display: block; font-size: 1.8rem; font-weight: 800; color: var(--primary); }
  .stat-label { font-size: 0.85rem; color: var(--text-light); }

  @media (max-width: 768px) {
    .about-grid { grid-template-columns: 1fr; gap: 2rem; }
    .about-placeholder { height: 200px; }
  }

  /* BRANDS */
  .brands { display: flex; justify-content: center; gap: 2rem; flex-wrap: wrap; margin-top: 1rem; }
  .brand { padding: 1rem 2.5rem; background: #fff; border-radius: 8px; font-weight: 700; color: var(--primary); font-size: 1.1rem; border: 1px solid #e8ecf1; }

  /* REASONS */
  .reasons-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 2rem; }
  .reason { padding: 2rem; border-radius: var(--radius); background: var(--bg-alt); }
  .reason-icon { font-size: 1.8rem; display: block; margin-bottom: 0.75rem; }
  .reason h4 { font-size: 1.1rem; font-weight: 700; color: var(--primary); margin-bottom: 0.4rem; }
  .reason p { color: var(--text-light); font-size: 0.95rem; }

  @media (max-width: 768px) {
    .reasons-grid { grid-template-columns: 1fr; }
  }

  /* CTA */
  .cta-section { background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%); color: #fff; text-align: center; }
  .cta-inner h2 { font-size: 2.2rem; font-weight: 800; margin-bottom: 0.75rem; }
  .cta-inner > p { opacity: 0.9; font-size: 1.1rem; margin-bottom: 2rem; }
  .cta-buttons { display: flex; justify-content: center; gap: 1rem; flex-wrap: wrap; margin-bottom: 2rem; }
  .cta-address { opacity: 0.75; font-size: 0.95rem; }
  .cta-address p { margin-bottom: 0.25rem; }

  /* FOOTER */
  .footer { background: #0f1b2d; color: rgba(255,255,255,0.7); padding: 3rem 0 1.5rem; }
  .footer-inner { display: grid; grid-template-columns: 1.5fr 1fr 1fr; gap: 2rem; }
  .footer-col .logo-text { color: #fff; font-size: 1.1rem; display: block; margin-bottom: 0.5rem; }
  .footer-col h4 { color: #fff; margin-bottom: 0.75rem; font-size: 0.95rem; }
  .footer-col p { font-size: 0.9rem; margin-bottom: 0.4rem; }
  .footer-col a { color: rgba(255,255,255,0.8); }
  .footer-col a:hover { color: var(--accent); }
  .footer-bottom { grid-column: 1 / -1; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 1.5rem; margin-top: 1rem; display: flex; justify-content: space-between; font-size: 0.85rem; }
  .demo-badge a { color: var(--accent); font-weight: 600; }

  @media (max-width: 768px) {
    .footer-inner { grid-template-columns: 1fr; }
    .footer-bottom { flex-direction: column; gap: 0.5rem; }
  }
</style>
