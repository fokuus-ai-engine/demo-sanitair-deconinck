  @keyframes pulse { 0%, 100% { opacity: 1; } 50% { opacity: 0.5; } }
  .hero h1 { font-size: 3.2rem; font-weight: 800; line-height: 1.12; margin-bottom: 1.5rem; letter-spacing: -0.03em; }
  .highlight { background: linear-gradient(135deg, var(--accent) 0%, var(--accent-light) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; }
  .hero-sub { font-size: 1.1rem; opacity: 0.8; max-width: 520px; margin-bottom: 2.5rem; line-height: 1.8; }
  .hero-cta { display: flex; gap: 1rem; flex-wrap: wrap; }

  .hero-cards { display: flex; flex-direction: column; gap: 1rem; }
  .hero-card {
    display: flex; align-items: center; gap: 1rem;
    background: rgba(255,255,255,0.06); border: 1px solid rgba(255,255,255,0.1);
    backdrop-filter: blur(8px); border-radius: 14px; padding: 1.1rem 1.4rem;
